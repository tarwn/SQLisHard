<parameters>
	<parameter name="Application.Version" description="Build Version for the Application" defaultvalue="false">
		<parameterEntry kind="XmlFile" scope="Web.config" match="/configuration/appSettings/add[@key='Application.Version']/@value" />
	</parameter>
	<parameter name="Environment.Name" description="Descriptive name for environment" defaultvalue="false">
		<parameterEntry kind="XmlFile" scope="Web.config" match="/configuration/appSettings/add[@key='Environment.Name']/@value" />
	</parameter>
	<parameter name="Storm.AccessToken" description="Splunk Storm API Access Token" defaultvalue="false">
		<parameterEntry kind="XmlFile" scope="Web.config" match="/configuration/appSettings/add[@key='Storm.AccessToken']/@value" />
	</parameter>
	<parameter name="Storm.ProjectId" description="Splunk Storm project id" defaultvalue="false">
		<parameterEntry kind="XmlFile" scope="Web.config" match="/configuration/appSettings/add[@key='Storm.ProjectId']/@value" />
	</parameter>
	<parameter name="Scalyr.WriteToken" description="Scalyr API Write Token" defaultvalue="">
		<parameterEntry kind="XmlFile" scope="Web.config" match="/configuration/appSettings/add[@key='Scalyr.WriteToken']/@value" />
	</parameter>
	<parameter name="SMTP.FromAddress" description="from address for outgoing mail" defaultvalue="">
		<parameterEntry kind="XmlFile" scope="Web.config" match="/configuration/system.net/mailSettings/smtp/@host" />
	</parameter>
	<parameter name="SMTP.Host" description="Host value for outgoing mail" defaultvalue="">
		<parameterEntry kind="XmlFile" scope="Web.config" match="/configuration/system.net/mailSettings/smtp/network/@host" />
	</parameter>
	<parameter name="SMTP.Port" description="Port value for outgoing mail" defaultvalue="25">
		<parameterEntry kind="XmlFile" scope="Web.config" match="/configuration/system.net/mailSettings/smtp/network/@port" />
	</parameter>
	<parameter name="SMTP.UserName" description="UserName value for outgoing mail" defaultvalue="">
		<parameterEntry kind="XmlFile" scope="Web.config" match="/configuration/system.net/mailSettings/smtp/network/@userName" />
	</parameter>
	<parameter name="SMTP.Password" description="Password value for outgoing mail" defaultvalue="">
		<parameterEntry kind="XmlFile" scope="Web.config" match="/configuration/system.net/mailSettings/smtp/network/@password" />
	</parameter>
	<parameter name="SMTP.EnableSsl" description="EnableSsl value for outgoing mail" defaultvalue="false">
		<parameterEntry kind="XmlFile" scope="Web.config" match="/configuration/system.net/mailSettings/smtp/network/@enableSsl" />
	</parameter>
</parameters>